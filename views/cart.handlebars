
 
    <div class="container mt-5">
        <h1>Carro de compras</h1>
        {{#if user.cart.length}}
            <ul class="list-group">
                {{#each user.cart}}
                    <li class="list-group-item">
                        {{this.name}} - ${{this.price}}
                        <button class="btn btn-danger btn-sm float-right">Eliminar</button>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>No hay productos en el carrito</p>
        {{/if}}
    </div>